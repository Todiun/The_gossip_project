<h1>Gossips#show</h1>
<p>Find me in app/views/gossips/show.html.erb</p>

<div class="card shadow p-4">
  <h1 class="mb-3"><%= @gossip.title %></h1>
  <p class="text-muted">
    Par <%= link_to @gossip.user.first_name, user_path(@gossip.user), class: "text-decoration-none" %>
  </p>
  <hr>
  <p><%= @gossip.content %></p>
  <p class="mt-3"><strong>Publié le :</strong> <%= @gossip.created_at.strftime("%d/%m/%Y") %></p>
  <%= link_to "Retour à l'accueil", root_path, class: "btn btn-secondary mt-3" %>
</div>